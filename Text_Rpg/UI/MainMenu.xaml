<Window x:Class="Text_Rpg.UI.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Main Menu" FontSize="10">
    <Viewbox Stretch="Uniform">
        <Grid Height="364" Width="682">
            <Button x:Name="StartGameButton" Content="Start Game" HorizontalAlignment="Center" VerticalAlignment="Top" Height="76" Width="212" FontSize="36" Margin="0,19,0,0" />
            <Button x:Name="CharacterCreatorButton" Content="Character Creator" HorizontalAlignment="Left" Margin="25,33,0,0" VerticalAlignment="Top" Height="48" Width="186" Click="Button_Click" FontSize="20" />
            <Button x:Name="OptionsButton" Content="Options" HorizontalAlignment="Left" Margin="505,33,0,0" VerticalAlignment="Top" Height="48" Width="126" Click="OptionsButton_Click" FontSize="20"/>
        </Grid>
    </Viewbox>
</Window>
