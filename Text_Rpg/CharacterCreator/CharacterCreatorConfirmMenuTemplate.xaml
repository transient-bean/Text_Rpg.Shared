<Window x:Class="Text_Rpg.UI.CharacterCreatorConfirmMenuTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Text_Rpg.UI"
    mc:Ignorable="d"
    Title="CharacterCreatorConfirmMenuTemplate" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="CCCMLeftSide" HorizontalAlignment="Left" Height="216" Margin="44,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="356" />
        <TextBlock x:Name="CCCMRightSide" HorizontalAlignment="Left" Height="216" Margin="405,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="356" />
        <Button x:Name="ConfirmCharacterButton" Content="Confirm Character" HorizontalAlignment="Center" Height="40" Margin="0,289,0,0" VerticalAlignment="Top" Width="324" FontSize="24" Click="ConfirmCharacterButton_Click" />
        <Button x:Name="CancelCharacterButton" Content="Cancel" HorizontalAlignment="Center" Height="40" Margin="0,350,0,0" VerticalAlignment="Top" Width="324" FontSize="24" Click="CancelCharacterButton_Click" />
    </Grid>
</Window>
